            <children>
                <HBox prefHeight="125.0" prefWidth="799.0" spacing="15.0">
                    <children>
                        <ImageView fx:id="img" fitHeight="100.0" fitWidth="76.0" pickOnBounds="true" preserveRatio="true" /> <!-- Espaceur avec une largeur fixe de 20 -->

                        <Label fx:id="name" prefHeight="49.0" prefWidth="134.0" text="Nom">
                            <font>
                                <Font name="Cambria" size="20.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="15.0" top="30.0" />
                            </HBox.margin>
                        </Label>
                        <Label fx:id="des" prefHeight="49.0" prefWidth="288.0" text="Description">
                            <font>
                                <Font name="Cambria" size="20.0" />
                            </font>
                            <HBox.margin>
                                <Insets top="30.0" />
                            </HBox.margin>
                        </Label>
                        <Label fx:id="prix" prefHeight="49.0" prefWidth="62.0" text="Prix">
                            <font>
                                <Font name="Cambria Bold" size="15.0" />
                            </font>
                            <HBox.margin>
                                <Insets top="30.0" />
                            </HBox.margin>
                        </Label>
                        <Label fx:id="quan" prefHeight="49.0" prefWidth="72.0" text="Quantite">
                            <font>
                                <Font name="Cambria" size="20.0" />
                            </font>
                            <HBox.margin>
                                <Insets top="30.0" />
                            </HBox.margin>
                        </Label>
                        <Label fx:id="cat" prefHeight="49.0" prefWidth="183.0" text="categorie">
                            <font>
                                <Font name="Cambria" size="20.0" />
                            </font>
