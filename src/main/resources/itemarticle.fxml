                            <Button fx:id="updtButton" onAction="#handleUpdateButtonClicked" text="Update"  />
                            <Button fx:id="delButton" onAction="#handleDeleteButtonClicked" text="Delete"  />

                            <HBox.margin>
                                <Insets top="40.0" />
                            </HBox.margin>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets left="20.0" top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
    <styleClass>
        <String fx:value="fruit-item" />
        <String fx:value="shadow" />
